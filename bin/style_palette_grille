#!/usr/bin/env ruby

# Use:
#     style_palette_grille /path/to/style_palettes.json

begin
  require "style_palette"
rescue LoadError
  require "rubygems"
  require "style_palette"
end

require_relative "../lib/style_palette/grille"

if ARGV.empty?
  puts "Use: `style_palette_grille <palettes_file_path>`"
  exit 1
end

StylePalette.palettes_config = ARGV.first
StylePalette::Grille.run!